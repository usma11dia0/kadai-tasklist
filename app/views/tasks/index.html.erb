<h1>タスク一覧</h1>

<% if @tasks.any? %>
  
  <table class  = 'table table-striped'>
    <thead>
      <tr>
        <th>
          id
        </th>
        <th>
          タスク名
        </th>
        <th>
          進捗状況
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= link_to task.id, task %>
          </td>
          <td>
            <%= task.content %>
          </td>
          <td>
            <%= task.status %>
          </td>
        </tr>
      <% end %>
    </tbody>
 </table>
<% end %>

<%= paginate @tasks %>



