<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
  
    <div id = 'error_explanation'>
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li>
            <%= task %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスク'%>
  <%= f.text_field :content %>
  <%= f.label :status, '進捗状況' %>
  <%= f.text_field :status %>
  
  <%= f.submit '投稿'%>
<% end %>

<%= link_to '一覧に戻る',tasks_path%>